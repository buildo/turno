{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "allowJs": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "removeComments": true,
    "lib": ["es2018"],
    "outDir": "./build"
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
